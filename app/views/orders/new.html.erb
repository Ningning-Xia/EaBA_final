<% provide(:title, 'New Order') %>
<h1>New Order</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@order) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			<%= f.label :content %>
			<%= f.text_area :content , :rows => "10"%>

			<%= f.label :address %>
			<%= f.text_area :address, :rows => "3" %>

			<%= f.label :zipcode %>
			<%= f.text_field :zipcode %>

			<%= f.label :phone %>
			<%= f.text_field :phone %>

			<%= f.submit "Submit my order", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>

